<html>

<head>
    <title>Form</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include("nav") %>
        <div class="container">
            <h1>
                Message Form
            </h1>

            <% if (errors && errors.length> 0) { %>
                <div class="error-container">
                    <h3>Please fix the following errors:</h3>
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>

                    <form method="POST" action="/new">
                        <label for="author">
                            Author
                            <input id="author" type="text" name="author" value="<%= author || '' %>" required>
                        </label>
                        <label for="message">
                            Message
                            <input id="message" type="text" name="message" value="<%= message || '' %>" required>
                        </label>
                        <div class="text-center">
                            <button type="submit">Submit</button>
                        </div>
                    </form>
        </div>
</body>

</html>